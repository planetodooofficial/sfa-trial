                    <t t-foreach="expenses" t-as="expense">
                        <p>
                            <a t-attf-href="/my/MyReimbursement/{{ slug(expense) }}">
                                <t t-esc="expense.name"/>
                            </a>
                        </p>
                    </t>
                </div>
            </div>
        </t>
    </template>

